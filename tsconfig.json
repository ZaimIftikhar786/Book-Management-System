{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Language and Environment */
    "target": "es2016",
    
    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",                                     /* Specify the root folder for your .ts files. */

    /* Emit */
    "outDir": "./dist",                                      /* Specify an output folder for all compiled files. */

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src/**/*"]                                    /* Include all files from the 'src' directory. */
}
